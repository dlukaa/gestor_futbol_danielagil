<odoo>
    <data>
        <!-- Form View -->
        <record id="view_football_coach_form" model="ir.ui.view">
            <field name="name">football.coach.form</field>
            <field name="model">football.coach</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="club_id"/>
                                <field name="licenses"/>
                            </group>
                            <group>
                                <field name="salary"/>
                                <field name="experience_years"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_football_coach_tree" model="ir.ui.view">
            <field name="name">football.coach.tree</field>
            <field name="model">football.coach</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="club_id"/>
                    <field name="licenses"/>
                    <field name="experience_years"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_football_coach" model="ir.actions.act_window">
            <field name="name">Entrenadores</field>
            <field name="res_model">football.coach</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_football_coach" parent="menu_football_root" action="action_football_coach" sequence="25"/>
    </data>
</odoo>
