<odoo>
    <data>
        <!-- Form View -->
        <record id="view_football_competition_form" model="ir.ui.view">
            <field name="name">football.competition.form</field>
            <field name="model">football.competition</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="prize_money"/>
                        </group>
                        <notebook>
                            <page string="Partidos">
                                <field name="match_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_football_competition_tree" model="ir.ui.view">
            <field name="name">football.competition.tree</field>
            <field name="model">football.competition</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="prize_money"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_football_competition" model="ir.actions.act_window">
            <field name="name">Competiciones</field>
            <field name="res_model">football.competition</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu attached to Configuration category -->
        <menuitem id="menu_football_competition" parent="menu_football_configuration" action="action_football_competition" sequence="10"/>
    </data>
</odoo>
