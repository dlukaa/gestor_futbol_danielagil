<odoo>
    <data>
        <!-- Form View -->
        <record id="view_football_match_form" model="ir.ui.view">
            <field name="name">football.match.form</field>
            <field name="model">football.match</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="competition_id"/>
                            </group>
                            <group>
                                <field name="home_club_id"/>
                                <field name="home_score"/>
                                <field name="away_club_id"/>
                                <field name="away_score"/>
                            </group>
                        </group>
                        <field name="player_ids" widget="many2many_tags"/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_football_match_tree" model="ir.ui.view">
            <field name="name">football.match.tree</field>
            <field name="model">football.match</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="competition_id"/>
                    <field name="total_goals"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_football_match" model="ir.actions.act_window">
            <field name="name">Partidos</field>
            <field name="res_model">football.match</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_football_match_list" parent="menu_football_match" action="action_football_match" sequence="10"/>
    </data>
</odoo>
