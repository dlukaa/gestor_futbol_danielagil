<odoo>
    <data>
        <!-- Form View -->
        <record id="view_football_club_form" model="ir.ui.view">
            <field name="name">football.club.form</field>
            <field name="model">football.club</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="city"/>
                            </group>
                            <group>
                                <field name="foundation_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Jugadores">
                                <field name="player_ids"/>
                            </page>
                            <page string="Partidos">
                                <group>
                                    <field name="home_match_ids"/>
                                    <field name="away_match_ids"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_football_club_tree" model="ir.ui.view">
            <field name="name">football.club.tree</field>
            <field name="model">football.club</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="city"/>
                    <field name="foundation_date"/>
                </tree>
            </field>
        </record>

        <!-- Kanban View (Bootstrap) -->
        <record id="view_football_club_kanban" model="ir.ui.view">
             <field name="name">football.club.kanban</field>
             <field name="model">football.club</field>
             <field name="arch" type="xml">
                 <kanban>
                     <field name="name"/>
                     <field name="city"/>
                     <templates>
                         <t t-name="kanban-box">
                             <div class="oe_kanban_global_click">
                                 <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
                                     <div class="card-header"><field name="name"/></div>
                                     <div class="card-body">
                                         <h5 class="card-title"><field name="city"/></h5>
                                     </div>
                                 </div>
                             </div>
                         </t>
                     </templates>
                 </kanban>
             </field>
         </record>

        <!-- Action -->
        <record id="action_football_club" model="ir.actions.act_window">
            <field name="name">Clubes</field>
            <field name="res_model">football.club</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <menuitem id="menu_football_club_list" parent="menu_football_club" action="action_football_club" sequence="10"/>
    </data>
</odoo>
